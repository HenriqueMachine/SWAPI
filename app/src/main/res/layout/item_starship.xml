<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorAccent"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/titleStartship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starships Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/modelStar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:textSize="16dp"
                android:id="@+id/manufacturerStar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:textSize="16dp"
                android:id="@+id/costStar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:textSize="16dp"
                android:id="@+id/MGLTstar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                android:textSize="16dp"
                android:id="@+id/crewStar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                android:textSize="16dp"
                android:id="@+id/hyperdriveRateStar"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
             </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorAccent">

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>